<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WeatherActivity"
    android:background="#2B76FA"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <com.github.florent37.materialtextfield.MaterialTextField
        android:id="@+id/edit_text"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:mtf_labelColor="#eee"
        app:mtf_image="@drawable/ic_wb_sunny_black_24dp"
        >
        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:textColor="#666"
            android:textSize="25sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>

    <in.shadowfax.proswipebutton.ProSwipeButton
        android:visibility="gone"
        android:id="@+id/awesome_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:bg_color="@android:color/holo_blue_dark"
        app:btn_text="Search" >

    </in.shadowfax.proswipebutton.ProSwipeButton>
    <Button
        android:id="@+id/normal_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Search" >

    </Button>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></FrameLayout>

</LinearLayout>